<div id="header" class="flex justify-between w-full px-6 py-3 items-center">
  <div class="flex items-center">
    <% if config.logo %>
      <a href="/"><%= image_tag config.logo %></a>
    <% else %>
      <a href="/" class="text-2xl text-white"><%= config.title %></a>
    <% end %>
  </div>
  <div class="flex gap-4">
    <div class="hidden sm:inline">
      <% config.links&.each do |link| %>
        <a href="<%= link.url %>" class="nav-link"><%= link.text %></a>
      <% end %>
    </div>

    <% if current_page.url == '/' && !config.hide_filters %>
      <button onclick="toggleSidebar()" class="text-white focus:outline-none">
        <%= inline_svg 'icons/menu.svg' %>
      </button>
    <% end %>
  </div>
</div>
