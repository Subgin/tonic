---
layout: layout
---

<% @title = item.name %>
<% @description = item.description %>

<div class="mt-12 mb-24 mx-12 md:mx-24">
  <span><%= item.category %></span>
  <h1><%= @title %></h1>

  <% item.images.each do |img| %>
    <%= image_tag img, width: 200, class: 'm-1' %>
  <% end if item.images %>

  <p><%= render_tags(item.tags) %></p>

  <div class="text-gray-500"><%= item.description %></div>

  <div class="my-6">
    <% rest_of_attrs(item).each do |k| %>
      <% value = item[k] %>
      <p>
        <b><%= k.titleize %></b>
        <span class="text-gray-500">
          <% if value.is_a?(Array) %>
            <%= render_tags(value) %>
          <% elsif is_bool?(value) %>
            <%= value ? "Yes" : "No" %>
          <% elsif is_url?(value) %>
            <%= link_to value, value %>
          <% else %>
            <%= value %>
          <% end %>
        </span>
      </p>
    <% end %>
  </div>

  <%= link_to "Back", "/", class: 'btn' %>
</div>
