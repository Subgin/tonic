<div id="header" class="flex justify-between w-full px-6 py-4 items-center">
  <div class="flex justify-between items-center space-x-3">
    <% if data.config.logo %>
      <a href="/"><img src="<%= data.config.logo %>" alt="logo"></a>
    <% else %>
      <a href="/" class="text-2xl leading-6 text-white"><%= data.config.title %></a>
    <% end %>
  </div>
  <div class="flex justify-center items-center">
    <div class="flex items-baseline space-x-2">
      <% data.config.links.each do |link| %>
        <a href="<%= link.url %>" class="nav-link"><%= link.text %></a>
      <% end %>

      <% if current_page.url == '/' && !data.config.hide_filters %>
        <button id="open" onclick="toggleSidebar()" class="hidden focus:outline-none">
          <%= inline_svg 'icons/menu.svg' %>
        </button>
        <button id="close" onclick="toggleSidebar()" class="lg:hidden focus:outline-none">
          <%= inline_svg 'icons/close.svg' %>
        </button>
      <% end %>
    </div>
  </div>
</div>
