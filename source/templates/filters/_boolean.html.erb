<%= label(attribute) %>

<p>
  <%= radio_button_tag(:type, name: attribute, value: 'true', onchange: "filterBy('boolean', '#{attribute}')") %>
  <span class="mr-2">Yes</span>

  <%= radio_button_tag(:type, name: attribute, value: 'false', onchange: "filterBy('boolean', '#{attribute}')") %>
  <span class="mr-2">No</span>
</p>
